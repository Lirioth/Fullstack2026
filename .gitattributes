# Auto detect text files and perform LF normalization
* text=auto

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Document files
*.pdf binary
*.doc binary
*.docx binary

# Audio/Video files
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary

# Ensure line endings for specific file types
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.md text eol=lf
*.py text eol=lf
*.html text eol=lf
*.css text eol=lf
